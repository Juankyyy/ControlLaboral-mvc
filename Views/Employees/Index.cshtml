@{
    ViewBag.Title = "Empleados";
    ViewBag.Favicon = "employees.svg";
}

<div class="container">
    <table class="table table-dark table-striped">
        <thead>
            <th>ID</th>
            <th>Names</th>
            <th>Last Names</th>
            <th>Document Number</th>
            <th>Job</th>
            <th>Actions</th>
        </thead>
        @foreach (var employee in Model)
        {
            <tbody>
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Names</td>
                    <td>@employee.LastNames</td>
                    <td>@employee.DocumentNumber</td>
                    <td>@employee.Job</td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@employee.Id">Details</a>
                        <button class="btn btn-sm btn-danger" data-bs-toggle="modal"
                            data-bs-target="#@employee.Names">Delete</button>
                    </td>
                </tr>
            </tbody>

            <div class="modal fade" id="@employee.Names" tabindex="-1" aria-labelledby="deleteModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content text-dark">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Eliminar Usuario con ID: @employee.Id</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body">
                            <p>Deseas eliminar al usuario: @employee.Names</p>
                        </div>
                        
                        <div class="modal-footer">
                            <a class="btn btn-primary" asp-action="Delete" asp-route-id="@employee.Id">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </table>
</div>